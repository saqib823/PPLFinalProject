                                <label class="fadeIn animated">Password</label>
                                <input type="password" class="form-control fadeInLeftBig animated" name="password" placeholder="Password">
                            <label class="fadeIn animated">Subjects</label>
                            <br/>
                            <input id="Checkbox1" name="subjects" type="checkbox" value="PPL" /> PPL
                            <br/>
                            <input id="Checkbox2" name="subjects" type="checkbox" value="OOP" /> OOP
                            <br/>
                            <input id="Checkbox3" name="subjects" type="checkbox" value="CC" /> CC
                            <br/>
                            <input id="Checkbox4" name="subjects" type="checkbox" value="TOA" /> TOA
